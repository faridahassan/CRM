{% extends '::base.html.twig' %}

{% block page_content -%}
    <h1>Deal list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Unit</th>
                <th>Price</th>
                <th>Commission</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('deal_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.unit }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.commission }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('deal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('deal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
