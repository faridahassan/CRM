{% extends '::base.html.twig' %}

{% block stylesheets %}
	{{parent()}}
	<link rel="stylesheet" href="{{asset('assets/js/datatables/dataTables.bootstrap.css')}}">
	<link rel="stylesheet" href="{{asset('assets/js/select2/select2.css')}}">
	<link rel="stylesheet" href="{{asset('assets/js/select2/select2-bootstrap.css')}}">
	<script type="text/javascript">
		var xenonPalette = ['#68b828','#7c38bc','#0e62c7','#fcd036','#4fcdfc','#00b19d','#ff6264','#f7aa47'];
	</script>
{% endblock %}

{% block page_content -%}
	<div class="row">
		<div class="col-sm-12">

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Property Details</h3>
					<div class="panel-options">
						<a href="#" data-toggle="panel">
							<span class="collapse-icon">&ndash;</span>
							<span class="expand-icon">+</span>
						</a>
						<a href="#" data-toggle="remove">
							&times;
						</a>
					</div>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-6">
							<label class="col-sm-3 control-label">Serial Number</label>
							<div class="col-sm-7">
								{{property.id}}
							</div>
						</div>
						<div class="col-md-6">
							<label class="col-sm-3 control-label">Location</label>
							<div class="col-sm-7">
								{{property.location.name | default ("")}}
							</div>
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">
							<label class="col-sm-3 control-label">Project</label>
							<div class="col-sm-7">
								{{property.project| default ("")}}
							</div>
						</div>
						<div class="col-md-6">
							<label class="col-sm-3 control-label">Asking Price</label>
							<div class="col-sm-7">
								{{(property.askingPrice|default(""))|number_format}}
							</div>
						</div>

					</div>
					<div class="row">
						<div class="col-md-6">						
							<label class="col-sm-3 control-label">Land area</label>
							<div class="col-sm-7">
								{{property.landArea| default ("")}}
							</div>
						</div>
						<div class="col-md-6">
								<label class="col-sm-3 control-label">Built up area</label>
								<div class="col-sm-7">
									{{property.buildupArea| default ("")}}
								</div>
						</div>
					</div>



					</div>
				</div>
			</div>
		</div>
		<div class="panel panel-default">
			<div class="panel-body">

				<div class="row">
					<div class="col-sm-12">

						<div class="panel panel-default">
							<div class="panel-heading">
								<h3 class="panel-title">Deal Details</h3>
								<div class="panel-options">
									<a href="#" data-toggle="panel">
										<span class="collapse-icon">&ndash;</span>
										<span class="expand-icon">+</span>
									</a>
									<a href="#" data-toggle="remove">
										&times;
									</a>
								</div>
							</div>
							<div class="panel-body">

								{{form_start(form, {'attr':{'class':'form-horizontal validate', 'role':'form'}})}}

								<div class="form-group">
									<label class="col-sm-3 control-label">Lead</label>

									<div class="col-sm-7">

										<div class="date-and-time">
											{{form_widget(form.lead, {'attr' :{'class':'form-control','data-validate':'required', 'data-message-required':'This field is required.'}})}}
											<script type="text/javascript">
												jQuery(document).ready(function($)
												{
													$("#crm_sandboxbundle_deal_lead").select2({
														placeholder: 'Select a lead',
														allowClear: true
													}).on('select2-open', function()
													{
												// Adding Custom Scrollbar
												$(this).data('select2').results.addClass('overflow-hidden').perfectScrollbar();
											});

												});
											</script>
										</div>
									</div>
								</div>
								<div class="form-group">
									<label class="col-sm-3 control-label">Price</label>

									<div class="col-sm-7">
										{{form_widget(form.price, {'attr':{'class':'form-control number-format', 'data-validate':'required', 'data-message-required':'This field is required.'}})}}
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Deposit</label>

									<div class="col-sm-7">
										{{form_widget(form.deposit, {'attr':{'class':'form-control number-format'}})}}
									</div>
								</div>

								<div class="form-group">
									<label class="col-sm-3 control-label">Commission (%)</label>

									<div class="col-sm-7">
										{{form_widget(form.commission, {'attr':{'class':'form-control'}})}}
									</div>
								</div>


								<div class="form-group">
									<div class="col-sm-10">
										{{form_widget(form.submit, {'label' : 'Add','attr':{'class':'btn btn-success pull-right'}})}}
									</div>
								</div>
								<div class="hidden">
									{{form_widget(form.closed)}}
								</div>
								{{form_rest(form)}}

							</form>

						</div>
					</div>

				</div>
			</div>
		</div>
	</div>
{% endblock %}

